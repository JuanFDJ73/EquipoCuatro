<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/widget_bg">

    <!-- Fila superior: logo a la izquierda + pregunta y ojo a la derecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Logo + etiqueta de Inventario (izquierda) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/widgetLogo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_widget"
                android:contentDescription="@string/icon_desc"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <!-- Columna derecha: pregunta + ojo y saldo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/widgetQuestion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/question"
                    android:textColor="@color/TextPrimary"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/widgetEye"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_view"
                    android:contentDescription="@string/eye_closed_desc"
                    android:padding="4dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/widgetBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ ****"
                android:textColor="@color/TextPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_marginTop="6dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Fila inferior: texto de gestión centrado e ícono de ajustes a la derecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widgetInventoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/inventory_label"
            android:textColor="@color/Secondary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widgetManageText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/manage"
            android:textColor="@color/TextPrimary"
            android:textSize="13sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/widgetManageIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/settings"
            android:contentDescription="@string/manage" />

    </LinearLayout>

</LinearLayout>